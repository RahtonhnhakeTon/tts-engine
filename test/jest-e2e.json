{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/tts-vendors/(.*)": "<rootDir>/../libs/tts-vendors/src/$1",
    "@app/tts-vendors": "<rootDir>/../libs/tts-vendors/src",
    "@app/vpaas-essentials/(.*)": "<rootDir>/../libs/vpaas-essentials/src/$1",
    "@app/vpaas-essentials": "<rootDir>/../libs/vpaas-essentials/src"
  }
}